<div class="search-form-container">
  <form id="search-form" class="search-form" action="/api/artist-search" method="GET">
    <input class="search-input" type="text" name="artistName" placeholder="Search...">
    <button class="search-button border-2 border-white hover:bg-blue-700" type="submit">Search</button>
  </form>
  <div class="login-create-account-link">
        {{#if logged_in}}
        <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a href="/auth/profile">Profile</a></p>
        <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a href="/auth/logout">Logout</a></p>
        {{/if}}
        {{#unless logged_in}}
        <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a href="/auth/login">Login</a></p><p class="float text-white">or</p><p class="text-white hover:text-blue-700 underline underline-offset-1"><a href="/auth/register">Create Account</a></p>
        {{/unless}}
      </div>
</div>
<h1 class="ml-12 text-white text-2xl">Albums</h1>
{{#each albums}}

<div class="album-search-result">
  <h5>{{strAlbum}}</h5>
  <p>{{intYearReleased}}</p>
  <a href="/reviews/album/{{idAlbum}}"><img style="width:200px" src="{{strAlbumThumb}}" alt="{{strAlbum}}"></a>
</div>
{{/each}}