<main class="homepage-background add-flex-center">
    <div class="profile-container centered-form">
        <div class="profile-content profile-form">
            <h1 class="mb-5 text-center text-white">User Profile</h1>
            <div class="mb-10 user-info">
                <h2 class="text-2xl text-white">Welcome, {{username}}!</h2>
                <p class="text-white">Email: {{email}}</p>
            </div>
            <form class="password-change-form">
                <h2 class="mb-3 text-white">Change Password</h2>
                <div class="mb-3 text-left form-group">
                    <label for="currentPassword" class="mb-1 text-white">Current Password:</label>
                    <input type="password" id="currentPassword" name="currentPassword" class="form-control" required>
                </div>
                <div class="mb-3 text-left form-group">
                    <label for="newPassword" class="mb-1 text-white">New Password:</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" required>
                </div>
                <div class="mb-3 text-left form-group">
                    <label for="confirmPassword" class="mb-1 text-white">Confirm New Password:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
                </div>
                <button type="submit"
                    class="mt-5 text-white py-2.5 px-2.5 rounded border-2 border-white bg-blue-600 hover:bg-blue-700">Save
                    New Password</button>
            </form>
            <div class="mt-4 user-reviews">
                <h2 class="text-2xl text-white">Your Album Reviews</h2>
                <ul>
                    {{#each reviews}}
                    <li class="album-review" data-review-id="{{dataValues.id}}">
                        <p class="mb-2 ml-5">Date: {{format_date dataValues.date}}</p>
                        <img src="{{strAlbumThumb}}" alt="{{strAlbum}}">
                        <p class="mb-2 ml-5"><strong><u>Album Title:</u></strong> {{dataValues.title}}</p>
                        <p class="mb-2 ml-5"><strong><u>Review:</u></strong> {{dataValues.content}}</p>
                        <a href="#" class="delete-review-link" data-review-id="{{dataValues.id}}">
                            <span
                                class="inline-block px-1 py-1 mt-2 mr-3 text-xs text-white transition-colors duration-300 ease-in-out bg-blue-400 border-2 border-black rounded hover:bg-blue-700">Delete</span>
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="mt-5">
                <h2 class="mb-10 text-white">Actions</h2>
                <button
                    class="mt-5 text-white py-2.5 px-2.5 rounded border-2 border-white bg-blue-600 hover:bg-blue-700"
                    id="logout"><a href="/api/users/logout">Logout</a></button>
            </div>
            <p class="mt-5 text-center text-white underline go-back-link hover:text-blue-700 underline-offset-1"><a
                    href="/">
                    << Go Back to Homepage</a>
            </p>
        </div>
    </div>
</main>

<script src="/public/js/password.js"></script>
<script src="/public/js/delete.js"></script>