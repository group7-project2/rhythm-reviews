<div class="inline-block w-4/5 max-w-lg p-5 mt-10 text-center rounded bg-white/30 shadow-white-30">
    <div class="text-black">
        <div class="text-black">
            <h1 class="mb-5 text-center text-white">User Profile</h1>
            <div class="mb-10">
                <h2 class="text-2xl text-white">Welcome, {{username}}!</h2>
                <p class="text-white">Email: {{email}}</p>
            </div>
            <form class="password-change-form">
                <h2 class="mb-3 text-white">Change Password</h2>
                <div class="mb-3 text-left form-group">
                    <label for="currentPassword" class="mb-1 text-white">Current Password:</label>
                    <input type="password" id="currentPassword" name="currentPassword" class="text-left w-full p-2.5 border-solid border-stone-300 border rounded mb-5 form-control" required>
                </div>
                <div class="mb-3 text-left">
                    <label for="newPassword" class="mb-1 text-white">New Password:</label>
                    <input type="password" id="newPassword" name="newPassword" class="text-left w-full p-2.5 border-solid border-stone-300 border rounded mb-5 form-control" required>
                </div>
                <div class="mb-3 text-left">
                    <label for="confirmPassword" class="mb-1 text-white">Confirm New Password:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="text-left w-full p-2.5 border-solid border-stone-300 border rounded mb-5 form-control" required>
                </div>
                <button type="submit"
                    class="mb-5 text-white py-2.5 px-2.5 rounded border-2 border-white bg-blue-600 hover:bg-blue-700">Save
                    New Password</button>
            </form>
            <div class="mt-5">
                <h2 class="mb-2 text-2xl text-white">Your Album Reviews</h2>
                <ul>
                    {{#each reviews}}
                    <li class="p-2.5 rounded border-2 mb-5 bg-white album-review" data-review-id="{{dataValues.id}}">
                        <p class="mb-2 ml-5">Date of Review: {{format_date dataValues.date}}</p>
                        <img src="{{strAlbumThumb}}" alt="{{strAlbum}}">
                        <p class="mb-2 ml-5"><strong><u>Album Title:</u></strong> {{dataValues.title}}</p>
                        <p class="mb-2 ml-5"><strong><u>Review:</u></strong> {{dataValues.content}}</p>
                        <a href="#" class="delete-review-link" data-review-id="{{dataValues.id}}">
                            <span
                                class="box-border inline-block w-20 px-1 py-1 mt-2 mr-3 text-xs text-white transition-colors duration-300 ease-in-out bg-blue-600 border-2 border-black rounded hover:bg-blue-700 h-51">Delete</span>
                        </a>

                    <div>
                        <div id="update-review-form-{{dataValues.id}}" class="hidden">
                            <input id="review-title-{{dataValues.id}}" type="text"
                                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mt-5"
                                placeholder="Title your review">
                            <textarea id="review-content-{{dataValues.id}}" maxlength="1000" rows="4"
                                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mt-3"
                                placeholder="Your thoughts on the album..."></textarea>
                            <button id="save-review-{{dataValues.id}}" type="button" class="box-border inline-block w-20 px-1 py-1 mt-2 mt-5 mr-3 text-xs text-white transition-colors duration-300 ease-in-out bg-blue-600 border-2 border-black rounded hover:bg-blue-700 h-51"
                                onclick="saveUpdatedReview({{dataValues.id}})">Save</button>
                            <button id="cancel-review-{{dataValues.id}}" type="button" class="box-border inline-block w-20 px-1 py-1 mt-2 mr-3 text-xs text-white transition-colors duration-300 ease-in-out bg-blue-600 border-2 border-black rounded hover:bg-blue-700 h-51"
                                onclick="cancelUpdateReview({{dataValues.id}})">Cancel</button>
                        </div>

                        <button id="update-review-{{dataValues.id}}" type="button" class="box-border inline-block w-20 px-1 py-1 mt-2 mr-3 text-xs text-white transition-colors duration-300 ease-in-out bg-blue-600 border-2 border-black rounded hover:bg-blue-700 h-51"
                            onclick="showUpdateFields(event, {{dataValues.id}})">Update</button>
                    </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="mt-5">

                <button
                    class="mt-5 text-white py-2.5 px-2.5 mr-2 rounded border-2 border-white bg-blue-600 hover:bg-blue-700"
                    id="logout"><a href="/api/users/logout">Logout</a></button>
            </div>
            <p class="mt-5 text-center text-white underline noShadow go-back-link hover:text-blue-700 underline-offset-1"><a
                    href="/">
                    << Go Back to Homepage</a>
            </p>
        </div>
    </div>
</div>

<script src="/public/js/password.js"></script>

<script src="/public/js/profile.js"></script>

<script src="/public/js/delete.js"></script>
