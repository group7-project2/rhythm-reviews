<div class="mt-60">
  <form id="search-form" class="text-center" action="/api/reviews/artist-search" method="GET">
    <input id="search-input" class="p-2.5 w-[300px]" type="text" name="artistName" placeholder="Search...">
    <button class="text-white py-2.5 px-2.5 rounded border-2 border-white hover:bg-blue-700"
      type="submit">Search</button>
  </form>
  <div class="login-create-account-link add-flex-center">
    {{#if logged_in}}
    <p
      class="float-left inline break-words mr-1.5 text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14">
      <a href="/profile">Profile</a></p>
    <p class="float-left inline break-words mr-1.5 text-white text-center">or</p>
    <p
      class="float-left inline break-words mr-1.5 text-white hover:text-blue-700 text-center underline underline-offset-1 mr-40">
      <a href="/api/users/logout">Logout</a></p>
    {{/if}}
    {{#unless logged_in}}
    <p
      class="float-left inline break-words mr-1.5 text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14">
      <a href="/login">Login</a></p>
    <p class="float-left inline break-words mr-1.5 text-white text-center">or</p>
    <p
      class="float-left inline break-words mr-1.5 text-white hover:text-blue-700 text-center underline underline-offset-1 mr-40">
      <a href="/register">Create Account</a></p>
    {{/unless}}
  </div>
</div>

{{#each album}}
<div class="add-flex-center">
  <div class="h-auto max-w-xs inline-block m-10 p-4 bg-white/30 rounded w-full selected-album">
    <h5>{{strAlbum}}</h5>
    <p>{{intYearReleased}}</p>
    <img style="width:400px" src="{{strAlbumThumb}}" alt="{{strAlbum}}">
  </div>
</div>
{{/each}}

<div class="review-form">
  {{#if logged_in}}
  <label for="review-title" class="block mb-2 text-sm font-medium text-white text-gray-900">Add Your Review Here</label>
  <input id="review-title" type="text"
    class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    placeholder="Title your review">
  <textarea id="review-content" maxlength="1000" rows="4"
    class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mt-3"
    placeholder="Your thoughts on the album..."></textarea>
  <div class="add-flex-center">
    <button id="submit-review"
      class="add-review text-white py-2.5 px-2.5 rounded border-2 border-white bg-blue-600 hover:bg-blue-700 mt-5"
      type="submit">Add Review</button>
  </div>
  {{/if}}
  {{#unless logged_in}}
      <p
      class="break-words mr-14 text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14">
      <a href="/login">Login to leave a review</a></p>
  {{/unless}}
</div>

{{#each reviews}}
<p class="mt-5 text-white">Your review has been posted:</p>
<div class="px-5 py-5 mt-5 border-2 border-blue-600 rounded-md bg-white">
  <p class="mb-2 ml-5">Username: {{dataValues.user.dataValues.username}}</p>
  <p class="mb-2 ml-5">Date: {{format_date dataValues.date}}</p>
  <p class="mb-2 ml-5">Title: {{dataValues.title}}</p>
  <p class="mb-2 ml-5">Review: {{dataValues.content}}</p>
</div>
{{/each}}
<div class="pb-40"></div>

{{#if logged_in}}
<script src="/public/js/review.js"></script>
{{/if}}