<div class="search-form-container">
  <form id="search-form" class="search-form" action="/api/reviews/artist-search" method="GET">
    <input id="search-input" class="search-input" type="text" name="artistName" placeholder="Search...">
    <button class="search-button border-2 border-white hover:bg-blue-700" type="submit">Search</button>
  </form>
  <div class="login-create-account-link add-flex-center">
    {{#if logged_in}}
    <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a
        href="/profile">Profile</a></p>
    <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a
        href="/logout">Logout</a></p>
    {{/if}}
    {{#unless logged_in}}
    <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a
        href="/login">Login</a></p>
    <p class="float text-white text-center">or</p>
    <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 mr-40"><a
        href="/register">Create Account</a></p>
    {{/unless}}
  </div>
</div>

{{#each album}}
<div class="selected-album">
  <h5>{{strAlbum}}</h5>
  <p>{{intYearReleased}}</p>
  <img style="width:200px" src="{{strAlbumThumb}}" alt="{{strAlbum}}">
</div>
{{/each}}

<div>
  {{#if logged_in}}
  <button class="add-review border-2 border-white hover:bg-blue-700" type="submit">Add Review</button>
  {{/if}}
  {{#unless logged_in}}
  <p>Log in to leave a review</p>
  {{/unless}}
</div>



{{#each reviews}}
<div class="album-reviews">
  <p>{{dataValues.user_id}}</p>
  <p>{{dataValues.content}}</p>
</div>
{{/each}}