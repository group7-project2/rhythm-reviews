<div class="search-form-container">
  <form id="search-form" class="search-form" action="/api/artist-search" method="GET">
    <input id="search-input" class="search-input" type="text" name="artistName" placeholder="Search...">
    <button class="search-button border-2 border-white hover:bg-blue-700" type="submit">Search</button>
  </form>
  <div class="login-create-account-link add-flex-center">
        {{#if logged_in}}
        <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a href="/profile">Profile</a></p>
        <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a href="/logout">Logout</a></p>
        {{/if}}
        {{#unless logged_in}}
        <p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 ml-14"><a href="/login">Login</a></p><p class="float text-white text-center">or</p><p class="float text-white hover:text-blue-700 text-center underline underline-offset-1 mr-40"><a href="/register">Create Account</a></p>
        {{/unless}}
      </div>
</div>

{{#each album}}
<div class="selected-album">
    <h5>{{strAlbum}}</h5>
    <p>{{intYearReleased}}</p>
    <img style="width:200px" src="{{strAlbumThumb}}" alt="{{strAlbum}}">
</div>
<div>
    <form name="Review" id="album-review"></form>
    <input type="text" name="Description" id="Description" size="20" maxlength="15">
    <button class="add-review" type="submit">Add Review</button>
</div>

{{/each}}

{{#each reviews}}
<div class="album-reviews">
    <p>{{dataValues.user_id}}</p>
    <p>{{dataValues.content}}</p>
    </div>
{{/each}}