  <div class="login-container top-padding">
    <h1 class="text-white text-center text-2xl">Login</h1>

    <div class="flex-row-reverse">
      <form class="login-form">
        <div class="form-group">
          <label for="email" class="text-white">Email:</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="password" class="text-white">Password:</label>
          <input type="password" id="password" name="password" required>
        </div>
        <div class="form-group">
          <button type="submit">Login</button>
        </div>
        <p class="create-account-link text-white">Don't have an account? <a href="/auth/register" class="hover:text-blue-700 text-center underline underline-offset-1 ml-2">Create Account</a></p>
      </form>
    </div>
    <p class="go-back-link text-white hover:text-blue-700 text-center underline underline-offset-1"><a href="/"><< Go Back to Homepage</a></p>
  </div>
