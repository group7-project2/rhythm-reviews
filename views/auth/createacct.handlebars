<div class="min-h-screen flex justify-center items-center">
    <form class="mx-auto w-full max-w-md bg-transparent p-4 rounded-lg" action="/auth/register" method="POST">
      <div class="mb-4">
        <label for="username" class="text-white block mb-1">Username:</label>
        <input type="text" id="username" name="username" required
          class="w-80 px-3 py-2 rounded bg-white text-gray-800 placeholder-gray-400">
      </div>
      <div class="mb-4">
        <label for="email" class="text-white block mb-1">Email:</label>
        <input type="email" id="email" name="email" required
          class="w-80 px-3 py-2 rounded bg-white text-gray-800 placeholder-gray-400">
      </div>
      <div class="mb-6">
        <label for="password" class="text-white block mb-1">Password:</label>
        <input type="password" id="password" name="password" required
          class="w-80 px-3 py-2 rounded bg-white text-gray-800 placeholder-gray-400">
      </div>
      <button type="submit" class="mx-auto w-50 px-4 py-2 border-2 border-white hover:bg-blue-700 text-white text-lg rounded">Create Account</button>
      <p class="text-white text-left mt-4"><a href="/"><< Go Back to Homepage</a></p>
    </form>
</div>