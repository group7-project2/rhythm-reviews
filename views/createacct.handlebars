<h1 class="mt-60 ml-12 text-white text-2xl mb-10">Create Account</h1>
<div class="flex-row-reverse">
<form class="signup-form">
  <div class="mb-2">
    <label for="username" class="text-white">Username:</label>
    <input type="text" id="username" name="username" class="text-left w-full p-2.5 border-solid border-stone-300 border rounded mb-5" required>
  </div>
        <div class="mb-2">
          <label for="email" class="text-white">Email:</label>
          <input type="email" id="email" name="email" class="text-left w-full p-2.5 border-solid border-stone-300 border rounded mb-5" required>
        </div>
        <div class="mb-2">
          <label for="password" class="text-white">Password:</label>
          <input type="password" id="password" name="password" class="text-left w-full p-2.5 border-solid border-stone-300 border rounded mb-5" required>
        </div>
  <div class="add-flex-center">
  <button type="submit" class="text-white py-2.5 px-2.5 rounded border-2 border-white bg-blue-600 hover:bg-blue-700 mt-5">Submit</button>
  </div>
   <p class="go-back-link text-white hover:text-blue-700 text-center underline underline-offset-1 mt-5"><a href="/"><< Go Back to Homepage</a></p>
</form>
</div>

<script src="/public/js/signup.js"></script>